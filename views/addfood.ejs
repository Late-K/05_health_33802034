<div class="form-card">
  <h2>Add food you have eaten today!</h2>

  <% if (errors && errors.length > 0) { %>
  <div>
    <ul>
      <% errors.forEach(function(err) { %>
      <li><%= err.msg %></li>
      <% }) %>
    </ul>
  </div>
  <% } %>

  <form method="post" action="/foods/foodadded">
    <div class="form-group">
      <label for="name">Name:</label>
      <input id="name" type="text" name="name" maxlength="50" required />
    </div>

    <div class="form-group">
      <label for="calories">Calories:</label>
      <input
        id="calories"
        type="number"
        min="0"
        max="99999"
        name="calories"
        required
      />
    </div>

    <div class="form-group">
      <label for="quantity">Quantity:</label>
      <input
        id="quantity"
        type="number"
        value="1"
        min="0.1"
        max="999"
        step="0.01"
        name="quantity"
        required
      />
    </div>

    <button type="submit" class="btn">Add food</button>
  </form>
</div>
